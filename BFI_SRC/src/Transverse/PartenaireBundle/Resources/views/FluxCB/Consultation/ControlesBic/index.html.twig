{% extends 'TransversePartenaireBundle::layout.html.twig' %}


{% block title %} Liste des fichiers PAIN en erreur {% endblock %}

{% block content %}

    <h3>
        Liste des fichiers PAIN en erreur
    </h3>


<table class="table table-striped">
    <thead>
    <tr>
        <th>Lien du fichier Pain</th>
        <th>Date</th>
        <th>Liste des BICs en erreur</th>
    </tr>
    </thead>
    <tbody>
    {% for PainEnErreur in PainEnErreurs %}
        <tr>
            <td><a href='{{ path('transverse_partenaire_fluxCB_consultation') }}/{{ PainEnErreur.id }}'>{{  PainEnErreur.urlPain }}</a></td>
            <td>{{ PainEnErreur.datePain|date("d/m/Y") }}</td>

            <td>
                {% for key,val in PainEnErreur.BicsEnErreur %}
                        {{ val[0] }}
                {% endfor %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="section actions">
    <a href="{{ path('transverse_partenaire_fluxCB') }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> Retour</a>
</div>
{% endblock %}


