{% extends '::base.html.twig' %}

{% block title %}Banque Fiducial{% endblock %}

{% block nav_content %}
    {% set route = app.request.attributes.get('_route') %}
    <ul class="list-inline">
        <li class="{% if route == 'front_office_main_homepage' %}active {% endif %}">
            <a href="{{ path('front_office_main_homepage') }}">Accueil</a>
        </li>
        <li class="{% if route == 'fos_user_change_password' %}active {% endif %}">
            <a href="{{ path('fos_user_change_password') }}">Mon compte</a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    {{ parent() }}
    {% block content %}{% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@FrontOfficeMainBundle/Resources/public/js/jquery-2.1.0.min.js'
        '@FrontOfficeMainBundle/Resources/public/js/bootstrap.min.js'
        '@FrontOfficeMainBundle/Resources/public/js/ie8.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}