{% extends '::base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@FrontOfficeMainBundle/Resources/public/css/placeholder.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}    
{% endblock %}
        
{% block nav_content %}
    {% set route = app.request.attributes.get('_route') %}
    
    <ul class="list-inline">
        <li {% if route == "fos_user_security_login" %} class="active" {% endif %}><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
        <li {% if route == "fos_user_resetting_request" %} class="active" {% endif %}><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a></li>
    </ul>
{% endblock %}

{% block body %}
    {{ parent() }}
    {% block content %}{% endblock %}
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@FrontOfficeMainBundle/Resources/public/js/jquery-2.1.0.min.js'
        '@FrontOfficeMainBundle/Resources/public/js/bootstrap.min.js'
        '@FrontOfficeMainBundle/Resources/public/js/jquery.placeholder.js'
        '@FrontOfficeMainBundle/Resources/public/js/global.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}