{% extends 'BackOfficeMonitoringBundle::layout.html.twig' %}

{% block title %}{{parent()}} - Logs Symfony {% endblock %}

{% block content %}

    <h3>Consultation des logs Symfony</h3>

    <div id="monitoLog">
        <form action="{{ path('back_office_monitoring_unversioned_files') }}" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="exampleInputEmail1" class="col-sm-2 control-label">Fichier de log</label>
                <div class="col-sm-10">
                    <select class="form-control" name="file">
                        <option></option>
                        {% for file in files %}
                            <option value="{{ file }}">{{ file }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Télécharger" class="btn btn-success"/>
                </div>
            </div>
        </form>
    </div>
{% endblock %}