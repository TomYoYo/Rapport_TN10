{% set heightAdr = '16px' %}

<pdf>
    <dynamic-page document-template="{{templates.1}}" font-size="10">
        <div margin-left="411px" margin-top="94px" height="87" font-size="11pt">
            <div>
                <div height='{{heightAdr}}' font-style="bold">
                    {{ compte.raisonSociale ?: '-' }}
                </div>
                <div height='{{heightAdr}}'>
                    {{ compte.adresseLettre[0] }}
                </div>
                <div height='{{heightAdr}}'>
                    {{ compte.adresseLettre[1] }}
                </div>
                <div height='{{heightAdr}}'>
                    {{ compte.adresseLettre[2] }}
                </div>
                <div height='{{heightAdr}}'>
                    {{ compte.adresseLettre[3] }}
                </div>
            </div>
        </div>

        <div margin-left="461px" margin-top="4px">
            <div>
                {{ 'now'|date('d/m/Y') }}
            </div>
        </div>

        <div margin-left="472px" margin-top="30px">
            <div>
                {{ compte.numCompte }}
            </div>
        </div>

        <div margin-left="626px" margin-top="177px">
            <div>
                {{ compte.tauxCompte ?: '0,00'}}%*,
            </div>
        </div>

        <div margin-left="553px" margin-top="178px">
            <div>
                {{ compte.idEsab ?: '*******' }}
            </div>
        </div>
    </dynamic-page>
</pdf>