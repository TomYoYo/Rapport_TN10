{% extends 'EditiqueMasterBundle::layoutMsg.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@FrontOfficeMainBundle/Resources/public/css/jquery-ui-1.10.4.custom.min.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}    
{% endblock %}

{% block content %}
    <h3>Message commercial numéro {{ message.id }}</h3>
    
    <table class="table table-striped">
        <tr>
            <th>Numéro du message</th>
            <td>{{ message.id }}</td>
        </tr>
        <tr>
            <th>Contenu du message</th>
            <td>{{ message.message }}</td>
        </tr>
        <tr>
            <th>Date de début de publication du message</th>
            <td>{{ message.dateDebut|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Date de fin de publication du message</th>
            <td>{{ message.dateFin|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Création</th>
            <td>Le {{ message.dateCreation|date('d/m/Y') }} à {{ message.dateCreation|date('H:i') }} par {{ message.createur.prenom }} {{ message.createur.nom }}</td>
        </tr>
        <tr>
            <th>Dernière modification</th>
            <td>
                {% if message.dateModification and message.editeur %}
                Le {{ message.dateModification|date('d/m/Y') }} à {{ message.dateModification|date('H:i') }} par {{ message.editeur.prenom }} {{ message.editeur.nom }}
                {% else %}
                <p class="text-muted">Non édité</p>
                {% endif %}
            </td>
        </tr>
    </table>
        
    <div class="pull-right">
        <a class="btn btn-default" href="{{ path('editique_messages_commerciaux') }}">Retour aux messages</a>
        <a class="btn btn-warning" href="{{ path('editique_messages_commerciaux_edit', {'id':message.id}) }}">Modifier</a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@FrontOfficeMainBundle/Resources/public/js/jquery-2.1.0.min.js'
        '@FrontOfficeMainBundle/Resources/public/js/jquery-ui-1.10.4.custom.min.js'
        '@EditiqueMasterBundle/Resources/public/js/editique.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
        
{% endblock %}