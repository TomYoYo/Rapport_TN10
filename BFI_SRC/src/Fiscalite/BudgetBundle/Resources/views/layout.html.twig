{% extends '::base.html.twig' %}

{% block title %}Contrôle budgétaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@FrontOfficeMainBundle/Resources/public/css/jquery-ui-1.10.4.custom.min.css'
    '@FrontOfficeMainBundle/Resources/public/css/placeholder.css'
    '@FiscaliteODBundle/Resources/public/css/od.css'
    '@FiscaliteODBundle/Resources/public/css/demo_table.css'
    '@FrontOfficeMainBundle/Resources/public/css/logo.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block nav_content %}
    {% set route = app.request.attributes.get('_route') %}

    <ul class="list-inline">
        <li {% if route == "fiscalite_controle_budget" %} class="active" {% endif %}><a href="{{ path('fiscalite_controle_budget') }}">Contrôle budgétaire</a></li>
        <li {% if route == "fiscalite_controle_budget_settings_nature" or route == "fiscalite_controle_budget_settings_code" %} class="dropdown active" {% else %} class="dropdown" {% endif %}>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Paramétrage<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="{{ path('fiscalite_controle_budget_settings_code') }}">Codes budgétaires</a>
                </li>
                <li>
                    <a href="{{ path('fiscalite_controle_budget_settings_nature') }}">Natures budgétaires</a>
                </li>
            </ul>
        </li>
    </ul>
{% endblock %}

{% block body %}
    {{ parent() }}
    {% block content %} {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '@FrontOfficeMainBundle/Resources/public/js/jquery-2.1.0.min.js'
    '@FrontOfficeMainBundle/Resources/public/js/bootstrap.min.js'
    '@FrontOfficeMainBundle/Resources/public/js/jquery.auto-numeric.js'
    '@FrontOfficeMainBundle/Resources/public/js/jquery.placeholder.js'
    '@FiscaliteODBundle/Resources/public/js/jquery.dataTables.min.js'
    '@FiscaliteODBundle/Resources/public/js/od.js'
    '@FrontOfficeMainBundle/Resources/public/js/ie8.js'
    '@FiscaliteBudgetBundle/Resources/public/js/cb.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}