<div id="tableauSaisie">
    <div id="mvtDebit">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Mouvements au débit</h3>
            </div>
            <div class="panel-body">
                {% include 'FiscaliteODBundle:Includes:tableauScrollable.html.twig' with {'type': 'deb'} %}
            </div>
            <div class="panel-footer" id="totalTableDeb">
                <table class="table-condensed">
                    <tr>
                        <td><div style="width:25px;"></div></td>
                        <td><div style="width:120px;"></div></td>
                        <td><div style="width:70px;"><input type="text" placeholder="Total" class="form-control input-sm" id="totalDeb" disabled="disabled" readonly="readonly" /></div></td>
                        <td><div style="width:200px;"></div></td>
                        <td><div style="width:51px;"></div></td>
                    </tr>
                </table>
            </div>
        </div>
