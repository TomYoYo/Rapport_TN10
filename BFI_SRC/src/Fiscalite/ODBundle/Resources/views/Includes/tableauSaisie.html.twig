                {% include 'FiscaliteODBundle:Includes:tableauScrollable.html.twig' with {'type': 'cre'} %}
            </div>
            <div class="panel-footer" id="totalTableCre">
                <table class="table-condensed">
                    <tr>
                        <td><div style="width:25px;"></div></td>
                        <td><div style="width:120px;"></div></td>
                        <td><div style="width:70px;"><input type="text" placeholder="Total" class="form-control input-sm" id="totalCre" disabled="disabled" readonly="readonly" /></div></td>
                        <td><div style="width:200px;"></div></td>
                        <td><div style="width:51px;"></div></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
